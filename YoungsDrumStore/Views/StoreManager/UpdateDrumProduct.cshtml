@model YoungsDrumStore.Models.ProductModel

@{
    ViewBag.Title = "UpdateDrumProduct";
}

<h2>Update Product</h2>

@using (Html.BeginForm("UpdateDrumProduct", "StoreManager"))
{
    @Html.HiddenFor(d => d.aDrum.DrumID)
    <div id="UpdateDrumBrandName">
        @Html.LabelFor(d => d.aDrum.BrandName)
        @Html.TextBoxFor(d => d.aDrum.BrandName, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(d => d.aDrum.BrandName)
    </div>
    <div id="UpdateDrumDrumType">
        @Html.LabelFor(d => d.aDrum.DrumType)
        @Html.TextBoxFor(d => d.aDrum.DrumType, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(d => d.aDrum.DrumType)
    </div>
    <div id="UpdateDrumDrumDescription">
        @Html.LabelFor(d => d.aDrum.DrumDescription)
        @Html.TextAreaFor(d => d.aDrum.DrumDescription)
        @Html.ValidationMessageFor(d => d.aDrum.DrumDescription)
    </div>
    <div id="UpdateDrumDrumQuantity">
        @Html.LabelFor(d => d.aDrum.DrumQuantity)
        @Html.TextBoxFor(d => d.aDrum.DrumQuantity)
        @Html.ValidationMessageFor(d => d.aDrum.DrumQuantity)
    </div>
    //find a way to make drum price text box better
    <div id="UpdateDrumPrice">
        @Html.LabelFor(d => d.aDrum.DrumPrice)
        @Html.TextBoxFor(d => d.aDrum.DrumPrice, new { @class = "form-control", type = "number", step = "0.01", max = "100000.00", placeholder = "Amount", required = "required" })
        @Html.ValidationMessageFor(d => d.aDrum.DrumPrice)
    </div>
    <div id="UpdateDrumImgURL">
        @Html.LabelFor(d => d.aDrum.DrumImgURL)
        @Html.TextBoxFor(d => d.aDrum.DrumImgURL)
    </div>

    <input class="btn btn-primary" type="submit" value="Update" />
    @Html.ActionLink("Cancel","ViewProducts","Admin", new { @class = "btn btn-danger"})
}