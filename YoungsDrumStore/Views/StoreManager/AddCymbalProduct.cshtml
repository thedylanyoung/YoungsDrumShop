@model YoungsDrumStore.Models.ProductModel

@{
    ViewBag.Title = "AddCymbalProduct";
}

<h2>Add Cymbal Product</h2>
<div class="form">
    @using (Html.BeginForm("AddCymbalProduct", "StoreManager", FormMethod.Post))
    {
        <div id="AddCymbalBrandName">
            @Html.LabelFor(c => c.aCymbal.BrandName)
            @Html.TextBoxFor(c => c.aCymbal.BrandName, new { @class = "form-control", required = "required" })
        </div>

        <div id="AddCymbalName">
            @Html.LabelFor(c => c.aCymbal.CymbalName)
            @Html.TextBoxFor(c => c.aCymbal.CymbalName, new { @class = "form-control", required = "required" })
        </div>

        <div id="AddCymbalDescription">
            @Html.LabelFor(c => c.aCymbal.CymbalDescription)
            @Html.TextAreaFor(c => c.aCymbal.CymbalDescription)
        </div>

        <div id="AddCymbalQuantity">
            @Html.LabelFor(c => c.aCymbal.CymbalQuantity)
            @Html.TextBoxFor(c => c.aCymbal.CymbalQuantity, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(c => c.aCymbal.CymbalQuantity)
        </div>

        <div id="AddCymbalPrice">
            @Html.LabelFor(c => c.aCymbal.CymbalPrice)
            @Html.TextBoxFor(c => c.aCymbal.CymbalPrice, new { @class = "form-control", type = "number", step = "0.01", max = "100000.00", placeholder = "Amount", required = "required" })
        </div>

        <div id="AddCymbalImgURL">
            @Html.LabelFor(c => c.aCymbal.CymbalImgURL)
            @Html.TextBoxFor(c => c.aCymbal.CymbalImgURL)
        </div>

        <input class="btn btn-primary" type="submit" value="Add" />
        @Html.ActionLink("Cancel", "ViewProducts", "StoreManager", new { @class = "btn btn-danger" })
    }
</div>

<style>
    .form {
        width: 500px;
        height: 500px;
    }
    #AddCymbalBrandName, #AddCymbalDescription, #AddCymbalImgURL, #AddCymbalName, #AddCymbalPrice, #AddCymbalQuantity {
        width: 100px;
        height: 75px;
        padding: 1px 0px 1px 0px
    }
</style>