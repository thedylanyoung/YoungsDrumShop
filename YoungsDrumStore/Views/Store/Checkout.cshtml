@model YoungsDrumStore.Models.Checkout
@using YoungsDrumStore.Models

@{
    ViewBag.Title = "Checkout";
}



<body>
    <h2>Address</h2>
    
        @using (Html.BeginForm("Checkout", "Store", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @*< fieldset >
                < !--Address Form-- >
                < legend > Address Details </ legend >
                   @Html.ValidationMessage("One of the required fields are missing or incorrect")
                   < div class="form-group">*@   
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Street Address</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "Address", required = "required" })
                        @Html.ValidationMessageFor(x => x.Address)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">City</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", placeholder = "City", required ="required" })
                        @Html.ValidationMessageFor(x => x.City)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">State</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.State, new { @class = "form-control", placeholder = "State", required = "required" })
                        @Html.ValidationMessageFor(x => x.State)
                    </div>
                    <label class="col-sm-2 control-label" for="textinput">Postcode</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control", placeholder = "Zip", maxlength = "10", required = "required" })
                        @Html.ValidationMessageFor(x => x.ZipCode)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Country</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="Country" class="form-control">
                    </div>
                </div>
                <br />
                <h2>Payment Details</h2>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Name on Card</label>
                    <div class="col-sm-10">
                        <input id="NameOnCard" class="form-control" type="text" maxlength="200">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Card #</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.CardNumber, new { @class = "form-control", placeholder = "Card Number", maxlength = "16", required = "required" })
                        @Html.ValidationMessageFor(x => x.CardNumber)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Exp. Date</label>
                    <div class="col-sm-4">
                        <input id="ExpiryDate" class="form-control" type="text" placeholder="MM / YY" maxlength="7">
                        @Html.TextBoxFor(x => x.CardExpiration, new { @class = "form-control", type = "text", placeholder="MM / YY", maxlength="7", required = "required" })
                        @Html.ValidationMessageFor(x => x.CardExpiration)
                    </div>
                    <label class="col-sm-2 control-label" for="textinput">CCV Code</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.CCV, new { @class = "form-control", maxlength = "3", required = "required" })
                        @Html.ValidationMessageFor(x => x.CCV)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="textinput">Country</label>
                    <div class="col-sm-10">
                        <input type="text" placeholder="Country" class="form-control" maxlength="10">
                    </div>
                </div>

                <input class="btn btn-block btn-success submit-button" type="Submit" value="Place Order" />
        }

</body>

