@model YoungsDrumStore.Models.AccountModel

@{
    ViewBag.Title = "RegisterAccount";
}

<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/Content/css/form-elements.css" />
<link rel="stylesheet" href="~/Content/css/style.css" />

<h2>Create Account</h2>



<body>
    <!-- Top content -->


    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Young's Drum Shop</strong> Create Account</h1>
                    <div class="description">

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Create your Account</h3>
                            <p>Enter your credentials and then click Register:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="" method="post" class="login-form">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.aAccount.UserName, new { @class = "form-input", placeholder = "Username", required="required" })
                                @Html.ValidationMessageFor(a => a.aAccount.UserName, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(x => x.aAccount.PassWord, new { @class = "form-input", placeholder = "Password", required = "required" })
                                @Html.ValidationMessageFor(a => a.aAccount.PassWord, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.aAccount.FirstName, new { @class = "form-input", placeholder = "First Name", required = "required" })
                                @Html.ValidationMessageFor(a => a.aAccount.FirstName, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.aAccount.LastName, new { @class = "form-input", placeholder = "Last Name", required = "required" })
                                @Html.ValidationMessageFor(a => a.aAccount.LastName, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.aAccount.Email, new { @class = "form-input", placeholder = "Email", required = "required" })
                                @Html.ValidationMessageFor(a => a.aAccount.Email, null, new { @class = "text-danger" })

                            </div>
                            <button type="submit" class="btn">Register!</button>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>


</body>

