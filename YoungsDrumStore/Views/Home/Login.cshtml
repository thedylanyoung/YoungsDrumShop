@model YoungsDrumStore.Models.AccountModel

@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/Content/css/form-elements.css" />
<link rel="stylesheet" href="~/Content/css/style.css" />

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
<body>
    <!-- Top content -->


    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Young's Drum Shop</strong> Login</h1>
                    <div class="description">

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Login to your Account</h3>
                            <p>Enter your username and password to log on:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="" method="post" class="login-form">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.aAccount.UserName, new { @class = "form-input", placeholder = "Username" })
                                @Html.ValidationMessage("Incorrect username or password.")
                                
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(x => x.aAccount.PassWord, new { @class = "form-input", placeholder = "Password" })
                                @Html.ValidationMessage("Incorrect username or password.")
                                
                            </div>
                            <button type="submit" class="btn">Sign in!</button>
                            <div id="Register">Don't have an account? <a>@Html.ActionLink("Register Here!", "RegisterAccount", "Home")</a></div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>


</body>
}



