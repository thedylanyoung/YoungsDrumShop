@model YoungsDrumStore.Models.AccountModel

@{
    ViewBag.Title = "UpdateAccount";
}

<h2>UpdateAccount</h2>

@using (Html.BeginForm("UpdateAccount", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.aAccount.AccountID)
    <div id="UpdateRoleDropDown">
        @Html.DropDownListFor(m => m.aAccount.RoleID, new List<SelectListItem>
        {
            new SelectListItem() {Text = "Admin", Value= "1"},
            new SelectListItem() {Text = "Manager", Value="2"},
            new SelectListItem() {Text = "Normal", Value="3"}
        })
    </div>

    <div id="UpdateFirstName">
        @Html.LabelFor(m => m.aAccount.FirstName)
        @Html.TextBoxFor(m => m.aAccount.FirstName, new { @required="required"})
    </div>
    <div id="UpdateLastName">
        @Html.LabelFor(m => m.aAccount.LastName)
        @Html.TextBoxFor(m => m.aAccount.LastName, new { @required = "required" })
    </div>
    <div id="UpdateUserName">
        @Html.LabelFor(m => m.aAccount.UserName)
        @Html.TextBoxFor(m => m.aAccount.UserName, new { @required = "required" })
    </div>
    <div>
        @Html.LabelFor(m => m.aAccount.PassWord)
        @Html.TextBoxFor(m => m.aAccount.PassWord, new { @required = "required" })
    </div>
    <input class="btn btn-primary"type="submit" value="Update" />
    @Html.ActionLink("Cancel", "ViewAccounts", "Admin", new { @class = "btn btn-danger" })

}

